{
  "name": "urbancare",
  "version": "1.0.0",
  "description": "Smart Healthcare Management System",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"red,blue\" \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "server-only": "cd server && npm run dev",
    "client-only": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "start-prod": "concurrently \"npm run start\" \"npm run serve\"",
    "serve": "cd client && npx serve -s build -p 3000",
    "test": "cd server && npm test && cd ../client && npm test",
    "clean": "rm -rf node_modules server/node_modules client/node_modules",
    "reset": "npm run clean && npm run install-all"
  },
  "keywords": [
    "healthcare",
    "mern",
    "nodejs",
    "react",
    "mongodb"
  ],
  "author": "UrbanCare Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "qrcode": "^1.5.4",
    "winston": "^3.18.3"
  }
}
