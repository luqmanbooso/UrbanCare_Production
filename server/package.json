{
  "name": "urbancare-server",
  "version": "1.0.0",
  "description": "UrbanCare Smart Healthcare System - Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:appointment": "jest tests/unit/services/AppointmentService.test.js tests/unit/repositories/AppointmentRepository.test.js tests/unit/controllers/AppointmentController.test.js tests/unit/services/PaymentService.test.js tests/integration/AppointmentFlow.test.js --coverage",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=html",

    "test:usecases": "node tests/runAllTests.js",
    "test:usecases:individual": "node tests/runAllTests.js --individual",
    "test:patient-mgmt": "jest tests/unit/PatientAuthService.test.js --coverage --collectCoverageFrom=services/PatientAuthService.js",
    "test:patient-auth": "jest tests/unit/PatientAuthService.test.js --coverage --collectCoverageFrom=services/PatientAuthService.js",
    "test:patient-mgmt-final": "jest tests/unit/PatientManagement_FINAL.test.js --coverage --collectCoverageFrom=services/PatientManagementService.js",
    "test:patient-mgmt-real": "jest tests/unit/PatientManagement_REAL.test.js --coverage --collectCoverageFrom=services/PatientManagementService.js",
    "test:patient-mgmt-working": "jest tests/unit/PatientManagement_WORKING.test.js --coverage --collectCoverageFrom=services/PatientManagementService.js",
    "test:appointments": "jest tests/unit/AppointmentBookingService.test.js --coverage --collectCoverageFrom=services/AppointmentBookingService.js", 
    "test:manager": "jest tests/unit/ManagerController.test.js tests/unit/ManagerService.test.js --coverage --collectCoverageFrom=controllers/ManagerController.js --collectCoverageFrom=services/ManagerService.js",
    "test:records": "jest tests/unit/DoctorController.test.js --coverage --collectCoverageFrom=controllers/DoctorController.js",
    "test:reports": "jest tests/unit/GenerateReports.test.js --coverage --collectCoverageFrom=controllers/ReportGenerationController.js --collectCoverageFrom=services/ManagerService.js",

    "test:doctor": "jest tests/doctor.test.js",
    "setup-admin": "node scripts/setupAdmin.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "keywords": [
    "healthcare",
    "hospital",
    "mern",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "UrbanCare Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "qrcode": "^1.5.4",
    "socket.io": "^4.7.2",
    "stripe": "^13.5.0",
    "winston": "^3.18.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "eslint": "^8.47.0",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
